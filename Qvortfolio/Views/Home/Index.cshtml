@model List<GithubRepositoryViewModel>
@{
    ViewData["Title"] = "Qvabbyte";
}
<main class="container">
    <div class="row HeadTry align-items-center text-center GrayishColor  p-3">
        <!-- Qvab section -->
        <div class="col-md-4 text-center d-flex flex-column justify-content-center position-relative">
            <div id="qvabbytetext" class="display-4">
                <div class="letterforqvatext">Q</div>
                <div class="letterforqvatext">v</div>
                <div class="letterforqvatext">a</div>
                <div class="letterforqvatext">b</div>
            </div>
            <div id="qvabbytetext" class="display-4">
                <div class="letterforqvatext">b</div>
                <div class="letterforqvatext">y</div>
                <div class="letterforqvatext">t</div>
                <div class="letterforqvatext">e</div>
            </div>
            <!--Full Name Section-->
            <div class="FullName">
                <p class="mt-1" style="margin-bottom: 0.2em;">Saba Salukvadze</p>
                <p><b>29.08.2006</b></p>
            </div>
        </div>

        <!-- Image section -->
        <div class="col-md-4 QvabbyteImageContainer text-center mt-lg-0 ">
            <div class="image-container">
                <img id="qvabbyteimage" class="rounded-circle" src="media/Qvabbyte/qvabbytefixed.png" />
            </div>
        </div>
        <!-- Developer section -->
        <div class="col-md-4 text-center mt-4">
            <h1 class="display-4">Full-Stack Developer</h1>
            <p>(Mainly Focused On Back-end.)</p>
        </div>
    </div>
    <hr />
    <!-- About Me Section -->
    <div class="row align-items-center text-center GrayishColor mt-5 p-3">
        <div class="col-md-12">

            <!-- About Me Title -->
            <h3 class="mt-2">About Me</h3>

            <!-- Personal Narrative -->
            <p>
                I'm <b>passionate</b> about building <b>something from scratch.</b> I've always had the mindset that <b>programming is an art</b>, as you can <b>create something out of nothing</b>, just like an artist.
                My development journey started when I realized the power of code to <b>transform ideas into reality</b>.
            </p>

            <!-- Personal Philosophy -->
            <p>
                My philosophy is simple: clean code, meaningful impact, and continuous learning. I strive to stay relevant with new technologies and methodologies to create innovative solutions.
            </p>

            <!-- Skill Bars -->
            <div class="skills mt-4">
                <h5>Skills</h5>
                <div class="progress">
                    <div class="progress-bar progress-bar-animated progress-bar-striped bg-info" role="progressbar" style="width: 88%" aria-valuenow="88" aria-valuemin="0" aria-valuemax="100">C# .NET EF ASP.NET RAZOR/MVC APIs</div>
                </div>
                <div class="progress mt-2">
                    <div class="progress-bar progress-bar-animated progress-bar-striped bg-secondary" role="progressbar" style="width: 82%" aria-valuenow="82" aria-valuemin="0" aria-valuemax="100">HTML CSS BOOTSTRAP</div>
                </div>
                <div class="progress mt-2">
                    <div class="progress-bar progress-bar-animated progress-bar-striped bg-success" role="progressbar" style="width: 75%" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100">JavaScript Typescript</div>
                </div>
                <div class="progress mt-2">
                    <div class="progress-bar bg-warning progress-bar-animated progress-bar-striped" role="progressbar" style="width: 60%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">MSSQL</div>
                </div>
                <div class="progress mt-2">
                    <div class="progress-bar bg-danger progress-bar-animated progress-bar-striped" role="progressbar" style="width: 30%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">Java / Java Spring</div>
                </div>
            </div>

            <!-- Call-to-Action Button -->
            <div class="mt-4">
                <a asp-controller="Home" asp-action="CV" class="btn btn-outline-warning btn-lg">View My CV</a>
            </div>
        </div>
    </div>
    <hr />
    <!-- Projects -->
    <div class="row mt-5 p-3" style="background-color: #f7f7f7; border-radius: 10px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
        <div class="col-md-10 offset-md-1 align-self-center text-center justify-content-center align-items-center">
            <h3 class="mt-2" style="color: #333; font-weight: bold;">Projects</h3>
            <h1 class="text-center" style="color: #2196F3; font-weight: bold;">My GitHub Repositories</h1>
            <div class="repositories-container" style="overflow-y: auto; height: 500px; padding: 20px; background-color: #fff; border: 1px solid #ddd; border-radius: 10px;">
                @foreach (var repository in Model)
                {
                    <div class="card" style="margin-bottom: 20px; background-color: #f7f7f7; border: 1px solid #ddd; border-radius: 10px;">
                        <div class="card-body">
                            <h2 class="card-title" style="color: #333; font-weight: bold;">@repository.Name</h2>
                            <p class="card-text" style="color: #666;">@repository.Description</p>
                            <a href="@repository.HtmlUrl" class="btn btn-primary" style="background-color: #2196F3; border-color: #2196F3;">View on GitHub</a>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-md-12 mt-5">
            <h1 style="color: #333; font-weight: bold;">My Published Works.</h1>
            <div class="card" style="margin-bottom: 20px; background-color: #f7f7f7; border: 1px solid #ddd; border-radius: 10px;">
                <div class="card-body">
                    <h2 class="card-title" style="color: #333; font-weight: bold;">Amo's Service</h2>
                    <p class="card-text" style="color: #666;">I've solo developed this simple website, purpose of this website is just towing and car services.</p>
                    <a href="https://www.amosservice.ge/" class="btn btn-primary btn-lg" style="background-color: #2196F3; border-color: #2196F3;">View Website</a>
                </div>
            </div>
        </div>
    </div>
</main>
