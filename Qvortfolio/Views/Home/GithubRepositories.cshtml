@model List<GithubRepositoryViewModel>
@{
    ViewData["Title"] = "GITHUB";
}
<div class="row" style="background-color: #f0f0f0; border-radius: 5px;">
    <div class="col-md-12 p-4">
        @* <h3 class="mt-2" style="color: #333; font-weight: bold;">Projects</h3> *@
        <h2 class="text-start text-dark" style=" font-weight: bold;">My GitHub Repositories</h2>
        <div class="repositories-container scrollbar" id="scrollbar" style="overflow-y: auto; height: 500px; width:100%; padding: 10px; background-color: #fff; border: 1px solid #151B23; border-radius: 10px; border-bottom-right-radius:3px; border-top-right-radius:3px;">
            @foreach (var repository in Model)
            {
                <div class="card" style="margin-bottom: 20px; background-color: #161b22; border: 1px solid #ddd; border-radius: 10px;">
                    <div class="card-body">
                        <h3 class="card-title" style="color: #2196F3; font-weight: bold;">@repository.Name</h3>
                        <p class="card-text" style="color: #666;">@repository.Description</p>
                        <a href="@repository.HtmlUrl" target="_blank" class="btn" style="color: #74B9FF; border: 1px solid #74B9FF;border-radius: 2px; background-color:#151B23;">View on GitHub</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>