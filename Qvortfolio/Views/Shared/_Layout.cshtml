@using Qvortfolio.Helpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Saba Salukvadze</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Qvortfolio.styles.css" asp-append-version="true" />
    <link href="media/Qvabbyte/New CV.png" rel="stylesheet"> 
    <meta property="og:title" content="Qvabbyte"/>
    <meta property="og:image" content="media/Qvabbyte/New CV.png"/>
    <meta property="og:description" content="Fullstack Developer Portfolio "/>
    <meta property="og:url" content="http://qvabit-001-site1.ptempurl.com/"/>
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="627"/>
    <meta property="og:type" content="website"/> 
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow ">
            <div class="container-fluid">
                <a class="navbar-brand" id="NavbarBrand" asp-area="" asp-controller="Home" asp-action="Index">Portfolio</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center">
                    <ul class="navbar-nav flex-grow-1 justify-content-around ullistebii d-flex" style="font-family:RobotoFlex; font-size:medium; font-weight:100;">
                        <li class="nav-item @(NavigationHelper.IsActive(ViewContext, "Home", "Index"))">
                            <a id="noneedanymore" class="nav-link text-dark navitemcss" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                        </li>
                        <li class="nav-item @(NavigationHelper.IsActive(ViewContext, "Home", "AboutMe"))">
                            <a class="nav-link text-dark navitemcss" asp-area="" asp-controller="Home" asp-action="AboutMe">ABOUT ME</a>
                        </li>
                        <li class="nav-item @(NavigationHelper.IsActive(ViewContext, "Home", "CV"))">
                            <a class="nav-link text-dark navitemcss" asp-area="" asp-controller="Home" asp-action="CV">CV</a>
                        </li>
                        <li class="nav-item @(NavigationHelper.IsActive(ViewContext, "Home", "GithubRepositories"))">
                            <a class="nav-link text-dark navitemcss" asp-area="" asp-controller="Home" asp-action="GithubRepositories">GITHUB</a>
                        </li>
                        <li class="nav-item @(NavigationHelper.IsActive(ViewContext, "Home", "PublishedWorks"))">
                            <a class="nav-link text-dark navitemcss" asp-area="" asp-controller="Home" asp-action="PublishedWorks">PROJECTS</a>
                        </li>
                        <li class="nav-item @(NavigationHelper.IsActive(ViewContext, "Home", "Contact"))">
                            <a class="nav-link text-dark navitemcss" asp-area="" asp-controller="Home" asp-action="PublishedWorks">CONTACT</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid" style="height:94%;">
        <main role="main" style="height:100%;">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted"> *@
    @*     <div class="container"> *@
    @*         <div class="row"> *@
    @*             <div class="col-md-6"> *@
    @*                 &copy; 2024 - Qvortfolio@*  - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
    @*             </div> *@

    @*         </div> *@

    @*     </div> *@
    @* </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
